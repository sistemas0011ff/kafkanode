{
    "compilerOptions": {
      "lib": ["es6", "es2017", "DOM"],
      "module": "commonjs",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": ".",
      "strict": false,
      "noEmit": false,
      "resolveJsonModule": true,
      "noUnusedLocals": false,//devolver
      "allowJs": true,
      "outDir": "dist",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "skipLibCheck": true,
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }